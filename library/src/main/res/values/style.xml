<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UMDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    
    <style name="UMDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/update_app_window_in</item>
        <item name="android:windowExitAnimation">@anim/update_app_window_out</item>
    </style>
    

    <style name="TransparentActivityStyle" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="MaxHeightScrollView">
        <attr name="mhsv_maxHeight" format="dimension" />
    </declare-styleable>
    
    
</resources>